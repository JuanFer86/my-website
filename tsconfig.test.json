{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/tests"]
}
